<h3>Errors for Batch: <%= params[:batch_number] %></h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th class='col-xs-1'>Run</th>
      <th class='col-xs-2'>Item ID</th>
      <th class='col-xs-3'>Call number</th>
      <th class='col-xs-4'>Shelving key</th>
      <th class='col-xs-5'>Message</th>
    </tr>
  </thead>
  <tbody>
    <tr class='<%= cycle('odd', 'even') %>'>
      <% @batch.each do |b| %>
      <td class='col-xs-1'><%= b.run %></td>
      <td class='col-xs-2'><%= b.item_id %></td>
      <td class='col-xs-3'><%= b.call_num %></td>
      <td class='col-xs-4'><%= b.shelving_key %></td>
      <td class='col-xs-5'><%= b.msg %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="btn-group">
  <%= main_menu_button %>
  <%= batch_menu_button %>
</div>
