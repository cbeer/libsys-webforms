<h2>Change Current Location Request Form</h2>
<%= form_for @change_current_location, multipart: true, class: 'form-group' do |f| %>
  <% if @change_current_location.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @change_current_location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='form-group row'>
    <%= f.label :current_library, class: 'col-sm-2 form-control-label' %>
    <div class='col-sm-10'>
      <%= f.select :current_library, options_from_collection_for_select(UnicornPolicy.libraries, 'name', 'name'), include_blank: true, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group row'>
    <%= f.label :new_current_location, class: 'col-sm-2 form-control-label' %>
    <div class='col-sm-10'>
      <%= f.select :new_current_location, options_from_collection_for_select(UnicornPolicy.locations, 'name', 'name'), include_blank: true, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group row'>
    <%= f.label :item_ids, class: 'col-sm-2 form-control-label' %>
    <div class='col-sm-10'>
      <%= f.file_field 'item_ids', class: 'form-control-file' %>
    </div>
  </div>
  <div class='form-group row', class: 'col-sm-2 form-control-label'>
    <%= f.label :email, class: 'col-sm-2 form-control-label' %>
    <div class='col-sm-10'>
      <%= f.text_field 'email', class: 'form-control' %>
    </div>
  </div>
  <div class='form-group row'>
    <%= f.label :comments, class: 'col-sm-2 form-control-label' %>
    <div class='col-sm-10'>
      <%= f.text_area 'comments', class: 'form-control' %>
    </div>
  </div>
  <div><%= f.submit 'Update batch', class: 'btn' %></div><br/>
  <div class="btn-group">
    <%= main_menu_button %>
    <%= batch_menu_button %>
  </div>
<% end %>
