  <%= date_field_tag('checkin_date1', '', data: {provide: 'datepicker', 'date-format': 'yyyy-mm-dd', 'date-today-highlight': true}) %>
  <%= date_field_tag('checkin_date2', '', data: {provide: 'datepicker', 'date-format': 'yyyy-mm-dd', 'date-today-highlight': true}) %>
  <%= link_to 'Go', '#', :onclick => "window.location.href='/lobbytrack/checkin_dates/' + $('#checkin_date1').val() + '/' + $('#checkin_date2').val();", class: 'btn btn-md btn-default' %>
</div>
