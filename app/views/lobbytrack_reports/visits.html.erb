<% content_for :javascript_includes do %>
    <%= javascript_include_tag 'lobbytrack_reports.js' %>
<% end %>
<div class="home-page-section">
  <h1>Visit report</h1>
  <div>
    <div class="btn-group">
      <%= link_to button_tag('LobbyTrack reports', class: 'btn btn-md btn-default btn-full'), lobbytrack_reports_path %>
    </div>
    <div class="btn-group">
      <%= main_menu_button %>
    </div>
  </div>
  <%= render 'visitor' %>
  <h3><%= @lobbytrack_reports.size %> Visits</h3>
  <div>
    <table class='table table-striped'>
      <thead>
      <tr>
        <th>
          Visit count
        </th>
        <th>
          Visit date
        </th>
      </tr>
      </thead>
      <tbody>
        <% @lobbytrack_reports.each_with_index do |row, index| %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <%= row['DateIn'] ? row['DateIn'].strftime('%F %R') : '' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<p />
<div>
  <div class="btn-group">
    <%= link_to button_tag('LobbyTrack reports', class: 'btn btn-md btn-default btn-full'), lobbytrack_reports_path %>
  </div>
  <div class="btn-group">
    <%= main_menu_button %>
  </div>
</div>
