<h2>SAL3 Batch Request</h2>
<%= form_for @sal3_batch_requests_batch, class: 'form-group' do |f| %>
<% if @sal3_batch_requests_batch.errors.any? %>
<div id="error-explanation">
  <ul>
    <% @sal3_batch_requests_batch.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div>
  <div class="panel-group" id="media_group">
    <div class='form-group row'>
      <%= f.label :status, "Status", class: 'col-sm-2 form-control-label' %>
      <div class='col-sm-10'>
        <%= f.select :status, Sal3BatchRequestsBatch.status, {}, {size: 4, class: 'form-control'} %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.label :status, "Priority", class: 'col-sm-2 form-control-label' %>
      <div class='col-sm-10'>
        <%= f.select :priority, Sal3BatchRequestsBatch.priority, {}, {size: 3, class: 'form-control'} %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.label :batch_numpullperday, "Items to pull per day", class: 'col-sm-2 form-control-label' %>
      <div class='col-sm-10'>
        <%= f.text_field :batch_numpullperday %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.label :stopcode, "Select delivery location", class: 'col-sm-2 form-control-label' %>
      <div class='col-sm-10'>
        <%= f.select :stopcode, Sal3BatchRequestsBatch.locations, {}, {size: 6, selected: 'none', class: 'form-control'} %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.label :comments, 'Comments or instructions for SAL3 staff', class: 'col-sm-2 form-control-label' %>
      <div class='col-sm-10'>
        <%= f.text_area 'comments', class: 'form-control' %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.label :batch_container, "Container", class: 'col-sm-2 form-control-label' %>
      <div class='col-sm-10'>
        <%= f.select :batch_container, Sal3BatchRequestsBatch.batch_container, {}, {size: 4, selected: 'none', class: 'form-control'} %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.label :batch_media, "Media type", class: 'col-sm-2 form-control-label' %>
      <div class='col-sm-10'>
        <%= f.select :batch_media, Sal3BatchRequestsBatch.batch_media.map{ |v, k| [ k[1],k[0] ] }, {}, {size: 11, selected: 'none', class: 'form-control'} %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.label :batch_startdate, "Delivery start date:", class: 'col-sm-2 form-control-label' %>
      <div class='col-sm-10'>
        <!-- don't know why the date value isn't populating... -->
        <%= f.date_field 'batch_startdate', as: :date, class: 'form-control', value: f.object.batch_startdate %>
      </div>
    </div>
  </div>
  <div><%= f.submit 'Submit edit', class: 'btn' %></div><br/>
</div>
<% end %>
<div class="btn-group">
  <%= link_to 'Batches', sal3_batch_requests_batches_path, class: 'btn btn-primary' %>
</div>
